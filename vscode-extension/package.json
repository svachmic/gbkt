{
  "name": "gbkt",
  "displayName": "gbkt",
  "description": "Syntax highlighting, snippets, and build integration for gbkt Kotlin DSL",
  "version": "0.2.0",
  "publisher": "gbkt",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbkt/gbkt"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "game boy",
    "kotlin",
    "gbdk",
    "retro",
    "dsl"
  ],
  "activationEvents": [
    "workspaceContains:**/build.gradle.kts",
    "onLanguage:kotlin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gbkt.buildRom",
        "title": "Build ROM",
        "category": "gbkt"
      }
    ],
    "languages": [
      {
        "id": "gbkt",
        "aliases": [
          "gbkt",
          "Game Boy Kotlin"
        ],
        "extensions": [],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gbkt",
        "scopeName": "source.gbkt",
        "path": "./syntaxes/gbkt.tmLanguage.json"
      },
      {
        "scopeName": "source.gbkt.injection",
        "path": "./syntaxes/gbkt.tmLanguage.json",
        "injectTo": [
          "source.kotlin"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.kotlin": "kotlin"
        }
      }
    ],
    "snippets": [
      {
        "language": "kotlin",
        "path": "./snippets/gbkt.code-snippets"
      }
    ],
    "keybindings": [
      {
        "command": "gbkt.buildRom",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceLangId == kotlin"
      }
    ],
    "configuration": {
      "title": "gbkt",
      "properties": {
        "gbkt.gradleWrapper": {
          "type": "string",
          "default": "./gradlew",
          "description": "Path to Gradle wrapper"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
